<?php

/**
 * ContenuTable
 * 
 * This class has been auto-generated by the Doctrine ORM Framework
 */
class ContenuTable extends Doctrine_Table
{
    /**
     * Returns an instance of this class.
     *
     * @return object ContenuTable
     */
    public static function getInstance()
    {
        return Doctrine_Core::getTable('Contenu');
    }
    
    /*
     * filtrage des Contenu en fonction du site (id_site)
     */
    public function getContenuSite(Doctrine_Query $q = null) {
        if (is_null($q)) {
            $q = Doctrine_Query::create()
            ->from('Contenu c');
        }

        $q->andWhere('c.id_site = ?', sfConfig::get('sf_id_site_client'));
        $q->andWhere('c.visible = 1');

        return $q;
    }
    
    /*
     * récupération des contenus non liés à une rubique
     */
    public function getContenuNonLieRub(Doctrine_Query $q = null) {
        if (is_null($q)) {
            $q = Doctrine_Query::create()
            ->from('Contenu c');
        }

        $q->andWhere('c.id_site = ?', sfConfig::get('sf_id_site_client'));
        $q->andWhere('c.visible = 1');
        $q->andWhere('c.id_rubrique_parente IS NULL OR c.id_rubrique_parente = 0');

        return $q->execute();
    }
}