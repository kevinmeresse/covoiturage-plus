class Lieu extends BaseLieu {

    public function __toString() {
        return $this->getLibelleLieu()." (".$this->getLieuType().")";
    }

    public function getExtractNomVille($codeInsee = null) {
        //récupération de l'id de la ville
        if($codeInsee == null || $codeInsee == ''){
            return '';
        }else{
            $outil = new Util();
        $id = $outil->extractIdVille($codeInsee);

        //récupération de la ville
        if ($id) {
            $ville = Doctrine_Core::getTable('VilleFr')->find($id);

            if ($ville) {
                return $ville->getNomVille();
            } else {
                return '';
            }
        } else {
            return '';
        }
        }
        
    }


}
