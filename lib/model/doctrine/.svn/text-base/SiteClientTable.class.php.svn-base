<?php

/**
 * SiteClientTable
 * 
 * This class has been auto-generated by the Doctrine ORM Framework
 */
class SiteClientTable extends Doctrine_Table
{
    /**
     * Returns an instance of this class.
     *
     * @return object SiteClientTable
     */
    public static function getInstance()
    {
        return Doctrine_Core::getTable('SiteClient');
    }

    /*
     * filtrage des sites clients en fonction du site (id_site)
     * tri sur le site parent
     */
    public function getSiteSite(Doctrine_Query $q = null) {
        if (is_null($q)) {
            $q = Doctrine_Query::create()
            ->from('SiteClient c');
        }

        $q->andWhere('c.id_site_parent = ?', sfConfig::get('sf_id_site_client'));

        return $q;
    }

}