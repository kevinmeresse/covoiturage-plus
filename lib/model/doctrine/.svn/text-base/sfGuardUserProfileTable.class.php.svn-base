<?php

/**
 * sfGuardUserProfileTable
 * 
 * This class has been auto-generated by the Doctrine ORM Framework
 */
class sfGuardUserProfileTable extends Doctrine_Table
{
    /**
     * Returns an instance of this class.
     *
     * @return object sfGuardUserProfileTable
     */
    public static function getInstance()
    {
        return Doctrine_Core::getTable('sfGuardUserProfile');
    }
    
    
    /*
     * filtrage des profils en fonction du site (id_site)
     * pour l'uitlisation en combo box en fournissant
     *  id_user
     *  initiale
     * retourne une requete
     * 
     */
    public static function getComboInitProfil(Doctrine_Query $q = null) {

            $q = Doctrine_Query::create()
                    ->select('p.id_user, p.initiales')
                    ->from('sfGuardUserProfile p')
                    ->where('p.id_user !=1 ')
                    ;


        $q->andWhere('p.id_site = ?', sfConfig::get('sf_id_site_client'));

        return $q;
    }

}