<?php

/**
 * EvenementTable
 * 
 * This class has been auto-generated by the Doctrine ORM Framework
 */
class EvenementTable extends Doctrine_Table
{
    /**
     * Returns an instance of this class.
     *
     * @return object EvenementTable
     */
    public static function getInstance()
    {
        return Doctrine_Core::getTable('Evenement');
    }
    
    /*
     * filtrage des Evenements en fonction du site (id_site)
     */
    public function getEvenementSite(Doctrine_Query $q = null) {
        if (is_null($q)) {
            $q = Doctrine_Query::create()
            ->from('Evenement e');
        }

        $q->andWhere('e.id_site = ?', sfConfig::get('sf_id_site_client'));

        return $q;
    }
}